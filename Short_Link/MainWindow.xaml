<Window x:Class="Short_Link.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Short_Link"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="850">
    <Grid Background="#ccd5ae">
        <Border Margin="10"  >
            <StackPanel>
                <Label Content="Short Link" FontSize="50px" HorizontalAlignment="Center" Padding="0 60 0 0 "
                       Foreground="#e9edc9" FontWeight="Bold"/>
                <!--Контейнер для Ввода ссылки и кнопки-->
                <StackPanel Margin="49 0 0 0">
                    <TextBox FontSize="24" MinWidth="500" Height="47.2" HorizontalAlignment="Left" Margin="45 55 0 0" 
                             ToolTip="Вставьте ссылку" Background="#fefae0" BorderBrush="#fefae0"
                             Foreground="#ccd5ae" x:Name="AddLink"/>
                    <Canvas>
                        <Button x:Name="SendButton" Content="Отправить" Width="126" Height="47.2" 
                            Canvas.Left="545" Canvas.Bottom="0" Background="#faedcd" BorderBrush="#faedcd" Foreground="#d4a373"
                            Click="SendButton_Click"/>
                    </Canvas>
                </StackPanel>


                <Label Content="Ваша ссылка:" FontSize="36px" HorizontalAlignment="Center" Padding="0 50 0 0 "
                       Foreground="#e9edc9" FontWeight="Bold"/>
                <TextBox IsReadOnly="True" Background="#fefae0" BorderBrush="#fefae0"
                             Foreground="#ccd5ae" Cursor="Arrow" Width="400" 
                         Margin="0 4 20 0" x:Name="CopyLink" FontSize="24"/>
                <Button x:Name="CopyButton" Content="Копировать" Width="126" 
                        Background="#faedcd" BorderBrush="#faedcd" Foreground="#d4a373"
                        Click="CopyButton_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
